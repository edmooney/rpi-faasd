{
  "variables": {
    "faasd_version": "",
    "iso_url": "",
    "iso_checksum": "",
    "iso_checksum_type": "",
    "preferred_mirror": "{{env `PREFERRED_MIRROR`}}"
  },
  "builders": [
    {
      "type": "arm-image",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "FAASD_VERSION={{user `faasd_version`}}",
        "PREFERRED_MIRROR={{user `preferred_mirror`}}"
      ],
      "scripts": [
        "scripts/before-installation.sh",
        "scripts/install-cloud-init.sh",
        "scripts/install-faasd.sh",
        "scripts/after-installation.sh"
      ]
    }
  ]
}